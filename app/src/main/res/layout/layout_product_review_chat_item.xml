<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/padding_small">

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friday - 15:23"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_normal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/riv_other_img"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            app:riv_corner_radius="100dp"
            android:src="@color/darkest"
            android:layout_marginTop="@dimen/margin_normal"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_other_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_lightest_round"
                        android:padding="@dimen/padding_normal"
                        android:layout_marginLeft="@dimen/margin_tiny"
                        android:layout_marginTop="@dimen/margin_small">

                        <TextView
                            android:id="@+id/tv_other_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxWidth="@dimen/_200sdp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="Supun Dissanayake"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_normal"
                            android:layout_marginLeft="@dimen/margin_small" />

                        <TextView
                            android:id="@+id/tv_other_msg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxWidth="@dimen/_200sdp"
                            android:text="Thank you for choosing Abans. We are waiting for your feedback."
                            android:textColor="@color/black"
                            android:layout_marginTop="@dimen/margin_tiny"
                            android:textSize="@dimen/text_normal"
                            android:layout_marginLeft="@dimen/margin_small" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_my_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_lightest_round"
                        android:padding="@dimen/padding_normal"
                        android:layout_marginRight="@dimen/margin_tiny"
                        android:layout_marginTop="@dimen/margin_normal">

                        <TextView
                            android:id="@+id/tv_my_name"
                            android:layout_width="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:layout_height="wrap_content"
                            android:maxWidth="@dimen/_200sdp"
                            android:text="Softlogic Holdings PLC"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_normal"
                            android:layout_marginLeft="@dimen/margin_small" />

                        <TextView
                            android:id="@+id/tv_my_msg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_tiny"
                            android:maxWidth="@dimen/_200sdp"
                            android:text="Thank you for choosing Abans. We are waiting for your feedback."
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_normal"
                            android:layout_marginLeft="@dimen/margin_small" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_other_img"
                android:layout_marginLeft="@dimen/margin_small"
                android:src="@color/darkest"
                android:layout_marginTop="@dimen/margin_normal"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/iv_my_img"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/margin_small"
                android:src="@color/darkest"
                android:layout_marginTop="@dimen/margin_normal"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/tv_not_sent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not sent. Tap to try again."
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/margin_tiny" />

        </LinearLayout>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/riv_my_img"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            app:riv_corner_radius="100dp"
            android:src="@color/darkest"
            android:layout_marginTop="@dimen/margin_normal"/>

    </LinearLayout>



</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.MerchantDetailsFragment"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:background="@drawable/bg_shadow" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/riv_merchant_logo"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_small"
            android:src="@drawable/abans_logo"
            app:riv_corner_radius="100dp" />

        <TextView
            android:id="@+id/tv_merchant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_small"
            android:fontFamily="@font/roboto_bold"
            android:text="Abans"
            android:textColor="@color/black"
            android:textSize="@dimen/text_title" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_small">

            <ImageView
                android:id="@+id/iv_rating1"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/ic_star_filled"
                android:tint="@color/light_yellow" />

            <ImageView
                android:id="@+id/iv_rating2"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/margin_tiny"
                android:src="@drawable/ic_star_filled"
                android:tint="@color/light_yellow" />

            <ImageView
                android:id="@+id/iv_rating3"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/margin_tiny"
                android:src="@drawable/ic_star_filled"
                android:tint="@color/light_yellow" />

            <ImageView
                android:id="@+id/iv_rating4"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/margin_tiny"
                android:src="@drawable/ic_star_filled"
                android:tint="@color/light_yellow" />

            <ImageView
                android:id="@+id/iv_rating5"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/margin_tiny"
                android:src="@drawable/ic_star_hollow"
                android:tint="@color/light_yellow" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_inquire"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_btn"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@color/darkest"
            android:text="INQUIRE"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/padding_large">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company Description"
                android:textColor="@color/black"
                android:textSize="@dimen/text_normal" />

            <TextView
                android:id="@+id/tv_merchant_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_tiny"
                android:paddingRight="@dimen/_30sdp"
                android:text="Abans is one of the most diversified and fastest growing public listed companies in Sri Lanka"
                android:textColor="@color/dark_grey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:text="Products"
                android:textColor="@color/black"
                android:textSize="@dimen/text_normal" />

            <TextView
                android:id="@+id/tv_products"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_tiny"
                android:paddingRight="@dimen/_30sdp"
                android:text="Washing Machines\nMicrowaves\nRefrigerators\nTVs"
                android:textColor="@color/dark_grey" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:text="Product Reviews"
            android:layout_marginLeft="@dimen/_15sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_normal" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_products"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/margin_small" />

    </LinearLayout>

</ScrollView>